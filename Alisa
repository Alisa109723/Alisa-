#include <stdio.h>
#include <math.h>

int main() { 
    double x1 = 0, y1 = 0;
    double x2 = 0, y2 = 3;
    double x3 = 4, y3 = 0;
    
    double a = sqrt(pow(x2 - x3,2)+ pow(y2 - y3,2));
    double b = sqrt(pow(x1 - x3,2)+ pow(y1 - y3,2));
    double c = sqrt(pow(x1 - x2,2)+ pow(y1 - y2,2));
    
    double P = a+b+c;
    double s=P /2;
    double S = sqrt(s * (s-a) * (s-b) *(s-c));
    
    printf("P = %.2f\n",P);
    printf("S = %.2f\n",S);
    
    return 0;
} 
